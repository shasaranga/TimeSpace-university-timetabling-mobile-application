        <!--            android:textColor="@color/white"-->
        <!--            android:textSize="18sp"-->
        <!--            android:layout_marginTop="15dp"-->
        <!--            android:layout_below="@+id/badgeNameBooking"/>-->
    </RelativeLayout>
</RelativeLayout>