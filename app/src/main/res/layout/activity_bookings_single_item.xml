<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorAccent"
    android:elevation="4dp">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <com.example.studenttimetable.Utils.LetterImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/ivBookingLetter"
            android:layout_margin="8dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvClassName"
            android:text="CR5"
            android:textStyle="bold"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:textSize="24sp"
            android:layout_toRightOf="@+id/ivBookingLetter"
            android:layout_alignTop="@+id/ivBookingLetter"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvBookingDate"
            android:text="2021-01-05 00:00:00"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="10dp"
            android:textSize="12sp"
            android:textStyle="bold"
            android:layout_toRightOf="@+id/ivBookingLetter"
            android:layout_below="@+id/ivBookingLetter"
            android:layout_alignTop="@+id/ivBookingLetter"/>
    </RelativeLayout>

</androidx.cardview.widget.CardView>